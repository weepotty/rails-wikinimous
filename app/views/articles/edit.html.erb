<h1>edit article</h1>

<%= form_with model: @article do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.submit "Update Article" %>
<% end %>

<p> <%= link_to "Show", article_path(@article) %> | <%= link_to "Back", articles_path %> </p>
