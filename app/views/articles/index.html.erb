<% @articles.each do |article| %>
  <article>
    <%= link_to article_path(article) do %>
      <h2><%= article.title %></h2>
    <% end %>
    <p><%= article.content %></p>
    <%= link_to "Delete", article_path(article),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </article>
<% end %>
